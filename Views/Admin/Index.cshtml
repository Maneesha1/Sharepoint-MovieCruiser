@model IEnumerable<MovieCrusier.Models.Movies>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies</h1>

<p>
    <a asp-action="AddNewMovie">Add New Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoxOffice)
            </th>
            <th>
                Date of Launch
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
               HasTeaser
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxOffice)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.DateOfLaunch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasTeaser)
            </td>
            <td>
                @Html.ActionLink("Edit", "ModifyMenuMovieAdmin", new { id = item.MovieId }) |
                @Html.ActionLink("Details", "GetMenuMovieAdminById", new { id = item.MovieId }) |
                @Html.ActionLink("Delete", "DeleteMenuMovieAdmin", new { id = item.MovieId })
            </td>
        </tr>
}
    </tbody>
</table>
