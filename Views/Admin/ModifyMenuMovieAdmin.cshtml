@model MovieCrusier.Models.Movies

@{
    ViewData["Title"] = "ModifyMenuMovieAdmin";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModifyMenuMovieAdmin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <input asp-for="MovieId" class="form-control" readonly />
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieName" class="control-label">Name</label>
                <input asp-for="MovieName" class="form-control" />
                <span asp-validation-for="MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoxOffice" class="control-label"></label>
                <input asp-for="BoxOffice" class="form-control" />
                <span asp-validation-for="BoxOffice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfLaunch" class="control-label">Date of Launch</label>
                <input asp-for="DateOfLaunch" class="form-control" type="date" readonly />
                <span asp-validation-for="DateOfLaunch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <div class="col-md-6 form-inline">
                    <input asp-for="Active" type="radio" class="form-control" value="Yes" required  />Yes
                    &nbsp;&nbsp; <input asp-for="Active" type="radio" class="form-control" value="No" />No
                </div>
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control" required>
                    <option value="select" selected="" disabled>Select..</option>
                    <option value="Superhero">Superhero</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Thriller">Thriller</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HasTeaser" class="control-label"></label>
                <select asp-for="HasTeaser" class="form-control" required>
                    <option value="select" selected="" disabled>Select</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
                <span asp-validation-for="HasTeaser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
